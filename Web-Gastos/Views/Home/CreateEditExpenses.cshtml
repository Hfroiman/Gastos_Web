@{
    ViewData["Title"] = "Create/Edit Expenses";
}
@model Web_Gastos.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit Expenses</h1>
</div>

<form asp-action="CreateEditExpensesForm" asp-controller="Home">

    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"/>

    <label>Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.1"/>

    <label>Descripcion</label>
    <input class="form-control" type="text" placeholder="Descripcion" asp-for="Descripcion" />

    <br />
    <button class="btn btn-primary" type="submit"> Confirmar </button>
</form>