@{
    ViewData["Title"] = "Expenses";
}
@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
</div>
<br />
<hr />
<h3>Total Expenses $@ViewBag.Expenses</h3>
<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>VALUE</th>
            <th>DESCRIPCION</th>
            <th>ACTIONS</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Expense in Model)
            {
                <tr>
                    <td> @Expense.Id</td>
                    <td> @Expense.Value</td>
                    <td> @Expense.Descripcion</td>
                    <td>
                        <a asp-action="CreateEditExpenses" asp-route-id="@Expense.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Expense.Id" >Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>
